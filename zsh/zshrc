#!/usr/bin/zsh

# Source Prezto.
if [[ -s "${ZDOTDIR:-$HOME}/.zprezto/init.zsh" ]]; then
  source "${ZDOTDIR:-$HOME}/.zprezto/init.zsh"
fi

zsh_dir="$HOME/dotfiles/zsh"
env_files=('profile' 'aliases')
for env_file in $env_files; do
    [[ -f "$zsh_dir/$env_file" ]] && source "$zsh_dir/$env_file"
done

export LS_COLORS="$LS_COLORS:di=01;36"

bindkey '^ ' autosuggest-accept
ZSH_AUTOSUGGEST_ACCEPT_WIDGETS=(
    vi-end-of-line
)

# necessary for WENVs
[[ -n "$WENV" ]] && wenv_exec -c "$WENV"
if [ -e /home/grish/.nix-profile/etc/profile.d/nix.sh ]; then . /home/grish/.nix-profile/etc/profile.d/nix.sh; fi # added by Nix installer
